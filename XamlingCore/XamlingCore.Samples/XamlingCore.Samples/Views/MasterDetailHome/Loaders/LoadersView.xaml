<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="XamlingCore.Samples.Views.MasterDetailHome.Loaders.LoadersView">
  <StackLayout BackgroundColor="Gray">
    <Label Text="Loaders Demo" />

    
    <Button Text="Full screen, 5 sec" Command="{Binding FullScreenFiveSecCommand}"/>
    <Button Text="Start a tray loader" Command="{Binding TrayAddCommand}"/>
    <Button Text="Navigate Back" Command="{Binding NavigateBackCommand}"/>
    <Button Text="Modal this" Command="{Binding ModalCommand}"/>
  </StackLayout>

</ContentPage>